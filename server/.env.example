# Server environment variables
# Copy this file to .env and fill in the values

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT signing secret - use a long random string in production
# Generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-me-to-a-long-random-string

# JWT token expiry (e.g. 24h, 8h, 7d)
JWT_EXPIRES_IN=24h

# Port the server listens on
PORT=3001

# Allowed CORS origin (your frontend URL)
CORS_ORIGIN=http://localhost:5173

# Node environment (development | production)
# In production: DB pool uses SSL, --reset migration is blocked
NODE_ENV=development

# bcrypt work factor â€” minimum 12 recommended; higher = slower but more secure
BCRYPT_ROUNDS=12

# Database connection pool tuning
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECT_TIMEOUT=5000

# Set to 'true' to log migration output
DEBUG_MIGRATIONS=false
